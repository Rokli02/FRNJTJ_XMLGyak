                                        <xs:element name="y" type="xs:string"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="c">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="d" type="xs:string"/>
                                        <xs:element name="e" type="xs:string"/>
                                    </xs:sequence>
