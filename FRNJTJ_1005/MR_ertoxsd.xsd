                            </xs:element>
                        </xs:sequence>
                        <xs:attribute name="a" type="xs:ID" use="required"/>
                    </xs:complexType>
                </xs:element>
<!-- B -->      <xs:element name="B" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="b">
